<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_12x">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_size"
            android:background="@color/colorShimmerLight"/>
        <View
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="@drawable/circle_opaque"
            android:layout_margin="@dimen/space_4x"
            android:backgroundTint="@color/colorShimmerDark"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="vertical">

                <View
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:background="@drawable/circle_opaque"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/space_4x"
                    android:backgroundTint="@color/colorShimmerDark"/>

            <View
                android:layout_width="50dp"
                android:layout_height="@dimen/space_14x"
                android:layout_gravity="end"
                android:background="@color/colorShimmerDark"
                android:layout_margin="@dimen/space_4x"/>

        </LinearLayout>

         <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background="@color/colorShimmerDark"/>
</FrameLayout>